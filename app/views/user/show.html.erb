<div class="container user-main">
  <div class="col-sm-8 col-xs-12">
    <% if @user %>
      <h2><%= @user.username %></h2>
      <p>
        <%= image_tag @user.profile_image.url(:medium),
              class: "profile-image-medium" %>
      </p>
      
      <p class="lead">
        <%= @user.information %>
      </p>
      
      <p>
        <%= link_to "#{@user.username}'s Submitted Links",
              submitted_links_user_path(@user.slug),
              class: "btn btn-success" %>
              
        <%= link_to "#{@user.username}'s Approved Links",
              approved_links_user_path(@user.slug),
              class: "btn btn-success button-left-margin" %>
      </p>
    <% else %>
      <h2>User not found.</h2>
    <% end %>
  
  </div>
</div>
