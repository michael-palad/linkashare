<%= form_for(@link, remote: true, html: { class: "form-horizontal" }) do |f| %>
  <%= render partial: 'links/partials/create_form_errors',
             locals: { link: @link } %>

  <div class="form-group">
    <%= f.label :url, class: "control-label col-sm-1", for: "link_url" %>
    <div class="col-sm-6">
      <%= f.text_field :url, class: "form-control", readonly: true %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :title, class: "control-label col-sm-1", for: "link_url" %>
    <div class="col-sm-6">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
    
  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-1", for: "link_url" %>
    <div class="col-sm-6">
      <%= f.text_area:description, size: "10x5", class: "form-control" %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-6">
      <%= f.button "Add Link", class: "btn btn-success btn-lg",
            name: "add_link", data: { disable_with: adding_link_text } %>
    </div>
  </div>
  
<% end %>

