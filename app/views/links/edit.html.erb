<div class="container links-main">
  <h3>Update Link Details</h3>
  
  <div class="col-sm-offset-1">
    <p>
      <%= image_tag(@link.website_image.url(:medium)) %>   
    </p>
    
    <p>
      <%= link_to "Visit Site", @link.url, class: "btn btn-sm btn-default",
          target: "_blank" %>
    </p>
  </div>
    
  <%= form_for(@link, html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "control-label col-sm-1" %>
      <div class="col-sm-6">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
        
    <div class="form-group">
      <%= f.label :description, class: "control-label col-sm-1" %>
      <div class="col-sm-6">
        <%= f.text_area :description, size: "10x5", class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-6">
        <%= f.submit "Update Link Details", class: "btn btn-success",
            data: { disable_with: "Updating Link..." } %>
            
        <%= link_to "Cancel", @link, 
            class: "btn btn-default button-left-margin",
            data: { disable_with: "Back to Link..." } %>
      </div>
    </div>
  <% end %>
</div>